{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hba/client/data-access": ["libs/client/data-access/src/index.ts"],
      "@hba/client/feature-dashboard": [
        "libs/client/feature-dashboard/src/index.ts"
      ],
      "@hba/client/ui-components": ["libs/client/ui-components/src/index.ts"],
      "@hba/client/ui-style": ["libs/client/ui-style/src/index.ts"],
      "@hba/server/data-access-expense": [
        "libs/server/data-access-expense/src/index.ts"
      ],
      "@hba/server/feature-expense": [
        "libs/server/feature-expense/src/index.ts"
      ],
      "@hba/shared/domain": ["libs/shared/domain/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
